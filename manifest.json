{
  "manifest_version": 3,
  "name": "Element Border Toggle",
  "version": "1.0",
  "description": "Toggle red borders on all elements with a keyboard shortcut",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-borders": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Ctrl+B"
      },
      "description": "Toggle red borders on all elements"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
